<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container" id='tabs'>
  <ul class="nav nav-tabs">
  <% @categories.each_with_index do  |category, i|%>
      <li class="nav-item" ><a class="nav-link tab-link" href='#' id=<%= category.title %> ><%= category.title  %></a></li>
    <% end %>
  </ul>
  <% @categories.each_with_index do  |category, i|%>
  <div class="card category-todo" id=<%= "category-todo-#{category.title}" %> >
    <ul>
      <% category.tasks.each do |task|  %>
      <li>
        <%= task.title  %>
        <% unless task.deadline.nil? %>
          , to read: <%= task.deadline.strftime('%D')  %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>

<div class="container col-8 carousel">
  <div class="row carousel-arrows">
    <a href='#' id='carousel-previous' class='mr-auto'> <img src="https://png.pngtree.com/svg/20170626/left_arrow_6661.png"></a>
    <a href='#' id='carousel-next'> <img src="https://png.pngtree.com/svg/20170626/right_arrow_6663.png"></a>
  </div>
  <div class='carousel-images'>
    <% @tasks.each_with_index do |task, i|  %>
      <div class='carousel-image' id=<%= i %> >
        <% unless task.image.nil? %>
          <%= image_tag task.image %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="carousel-index">
    <% @tasks.each_with_index do |task,i|  %>
      <% unless task.image.nil? %>
      <a href='#' class='carousel-dot' id=<%= i %> ><img src='https://png.pngtree.com/svg/20170826/carousel_dot_428068.png'></a>
      <% end %>
    <% end %>
  </div>
</div>

